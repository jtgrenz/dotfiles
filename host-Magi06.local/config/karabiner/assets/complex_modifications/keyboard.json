{
  "title": "Keyboard",
  "rules": [
    {
        "manipulators": [
            {
                "description": "Change right option to Hyper (i.e., command+control+option+shift)",
                "from": {
                    "key_code": "right_option",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "left_shift",
                        "modifiers": [
                            "left_control",
                            "left_option",
                            "left_command"
                        ]
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
      "manipulators": [
          {
              "description": "Change ; to Hyper when held (i.e., command+control+option+shift)",
              "from": {
                  "key_code": "semicolon"
               },
              "to": [
                  {
                      "key_code": "left_shift",
                      "modifiers": [
                          "left_control",
                          "left_option",
                          "left_command"
                      ]
                  }
              ],
              "to_if_alone": [
                {
                  "key_code": "semicolon"
                }
              ],
              "parameters": {
                "basic.if_alone_timeout_milliseconds": 0
              },
              "type": "basic"
          }
      ]
  },
  {
    "manipulators": [
        {
            "description": "Change tab to Hyper when held (i.e., command+control+option+shift)",
            "from": {
                "key_code": "tab"
             },
            "to": [
                {
                    "key_code": "left_shift",
                    "modifiers": [
                        "left_control",
                        "left_option",
                        "left_command"
                    ]
                }
            ],
            "to_if_alone": [
              {
                "key_code": "tab"
              }
            ],
            "parameters": {
              "basic.if_alone_timeout_milliseconds": 0
            },
            "type": "basic"
        }
    ]
  },

  {
    "manipulators": [
        {
          "description": "Hold Capslock to right control, tap for escape",
            "from": {
                "key_code": "caps_lock"
            },
            "parameters": {
                "basic.if_alone_timeout_milliseconds": 0
            },
            "to": [
              {
                  "key_code": "right_control"
              }
          ],
            "to_if_alone": [
                {
                    "key_code": "escape"
                }
            ],
            "type": "basic"
        }
    ]
},
    {
        "manipulators": [
            {
                "description": "[Bear] Use control+d to toggle todo state",
                "from": {
                    "key_code": "d",
                    "modifiers": {
                        "mandatory": [
                            "control"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "t",
                        "modifiers": [
                            "left_command",
                            "left_shift"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "type": "frontmost_application_if",
                        "bundle_identifiers": [
                            "^net\\.shinyfrog\\.bear$"
                        ]
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
        "manipulators": [
            {
                "description": "[Bear] Use command+v to paste as plain text",
                "from": {
                    "key_code": "v",
                    "modifiers": {
                        "mandatory": [
                            "command"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "v",
                        "modifiers": [
                            "left_command",
                            "left_option",
                            "left_shift"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "type": "frontmost_application_if",
                        "bundle_identifiers": [
                            "^net\\.shinyfrog\\.bear$"
                        ]
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
        "description": "[Bear] Use control+command+down/up to move current line(s) down/up",
        "manipulators": [
            {
              "description": "[Bear] Use control+command+down to move current line(s) down",
                "from": {
                    "key_code": "down_arrow",
                    "modifiers": {
                        "mandatory": [
                            "control",
                            "command"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "down_arrow",
                        "modifiers": [
                            "left_command",
                            "left_option"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "type": "frontmost_application_if",
                        "bundle_identifiers": [
                            "^net\\.shinyfrog\\.bear$"
                        ]
                    }
                ],
                "type": "basic"
            },
            {
              "description": "[Bear] Use control+command+down to move current line(s) up",
                "from": {
                    "key_code": "up_arrow",
                    "modifiers": {
                        "mandatory": [
                            "control",
                            "command"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "up_arrow",
                        "modifiers": [
                            "left_command",
                            "left_option"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "type": "frontmost_application_if",
                        "bundle_identifiers": [
                            "^net\\.shinyfrog\\.bear$"
                        ]
                    }
                ],
                "type": "basic"
            }
        ]
    }, {
      "description" : "S+D -> (S)uper(D)uper Mode",
      "manipulators" : [ {
        "from" : {
          "simultaneous" : [ {
            "key_code" : "s"
          }, {
            "key_code" : "d"
          } ],
          "simultaneous_options" : {
            "detect_key_down_uninterruptedly" : true,
            "key_down_order" : "insensitive",
            "key_up_order" : "insensitive",
            "key_up_when" : "any",
            "to_after_key_up" : [ {
              "set_variable" : {
                "name" : "superduper-mode",
                "value" : 0
              }
            } ]
          }
        },
        "to" : [ {
          "set_variable" : {
            "name" : "superduper-mode",
            "value" : 1
          }
        } ],
        "type" : "basic"
      } ]
    }, {
      "description" : "(S)uper(D)uper + H -> Left",
      "manipulators" : [ {
        "from" : {
          "key_code" : "h",
          "modifiers" : {
            "optional" : [ "any" ]
          }
        },
        "to" : [ {
          "key_code" : "left_arrow"
        } ],
        "conditions" : [ {
          "name" : "superduper-mode",
          "value" : 1,
          "type" : "variable_if"
        } ],
        "type" : "basic"
      } ]
    }, {
      "description" : "(S)uper(D)uper + J -> Down",
      "manipulators" : [ {
        "from" : {
          "key_code" : "j",
          "modifiers" : {
            "optional" : [ "any" ]
          }
        },
        "to" : [ {
          "key_code" : "down_arrow"
        } ],
        "conditions" : [ {
          "name" : "superduper-mode",
          "value" : 1,
          "type" : "variable_if"
        } ],
        "type" : "basic"
      } ]
    }, {
      "description" : "(S)uper(D)uper + K -> Up",
      "manipulators" : [ {
        "from" : {
          "key_code" : "k",
          "modifiers" : {
            "optional" : [ "any" ]
          }
        },
        "to" : [ {
          "key_code" : "up_arrow"
        } ],
        "conditions" : [ {
          "name" : "superduper-mode",
          "value" : 1,
          "type" : "variable_if"
        } ],
        "type" : "basic"
      } ]
    }, {
      "description" : "(S)uper(D)uper + L -> Right",
      "manipulators" : [ {
        "from" : {
          "key_code" : "l",
          "modifiers" : {
            "optional" : [ "any" ]
          }
        },
        "to" : [ {
          "key_code" : "right_arrow"
        } ],
        "conditions" : [ {
          "name" : "superduper-mode",
          "value" : 1,
          "type" : "variable_if"
        } ],
        "type" : "basic"
      } ]
    }, {
      "description" : "(S)uper(D)uper + A -> Option",
      "manipulators" : [ {
        "from" : {
          "key_code" : "a",
          "modifiers" : {
            "optional" : [ "any" ]
          }
        },
        "to" : [ {
          "key_code" : "left_option"
        } ],
        "conditions" : [ {
          "name" : "superduper-mode",
          "value" : 1,
          "type" : "variable_if"
        } ],
        "type" : "basic"
      } ]
    }, {
      "description" : "(S)uper(D)uper + F -> Command",
      "manipulators" : [ {
        "from" : {
          "key_code" : "f",
          "modifiers" : {
            "optional" : [ "any" ]
          }
        },
        "to" : [ {
          "key_code" : "right_command"
        } ],
        "conditions" : [ {
          "name" : "superduper-mode",
          "value" : 1,
          "type" : "variable_if"
        } ],
        "type" : "basic"
      } ]
    }, {
      "description" : "(S)uper(D)uper + Space -> Shift",
      "manipulators" : [ {
        "from" : {
          "key_code" : "spacebar",
          "modifiers" : {
            "optional" : [ "any" ]
          }
        },
        "to" : [ {
          "key_code" : "right_shift"
        } ],
        "conditions" : [ {
          "name" : "superduper-mode",
          "value" : 1,
          "type" : "variable_if"
        } ],
        "type" : "basic"
      } ]
    }, {
      "description" : "(S)uper(D)uper + U -> First Tab",
      "manipulators" : [ {
        "from" : {
          "key_code" : "u",
          "modifiers" : {
            "optional" : [ "any" ]
          }
        },
        "to" : [ {
          "key_code" : "1",
          "modifiers" : [ "left_command" ]
        } ],
        "conditions" : [ {
          "name" : "superduper-mode",
          "value" : 1,
          "type" : "variable_if"
        } ],
        "type" : "basic"
      } ]
    }, {
      "description" : "(S)uper(D)uper + I -> Prev Tab",
      "manipulators" : [ {
        "from" : {
          "key_code" : "i",
          "modifiers" : {
            "optional" : [ "any" ]
          }
        },
        "to" : [ {
          "key_code" : "open_bracket",
          "modifiers" : [ "left_command", "left_shift" ]
        } ],
        "conditions" : [ {
          "name" : "superduper-mode",
          "value" : 1,
          "type" : "variable_if"
        } ],
        "type" : "basic"
      } ]
    }, {
      "description" : "(S)uper(D)uper + O -> Next Tab",
      "manipulators" : [ {
        "from" : {
          "key_code" : "o",
          "modifiers" : {
            "optional" : [ "any" ]
          }
        },
        "to" : [ {
          "key_code" : "close_bracket",
          "modifiers" : [ "left_command", "left_shift" ]
        } ],
        "conditions" : [ {
          "name" : "superduper-mode",
          "value" : 1,
          "type" : "variable_if"
        } ],
        "type" : "basic"
      } ]
    }, {
      "description" : "(S)uper(D)uper + P -> Last Tab",
      "manipulators" : [ {
        "from" : {
          "key_code" : "p",
          "modifiers" : {
            "optional" : [ "any" ]
          }
        },
        "to" : [ {
          "key_code" : "9",
          "modifiers" : [ "left_command" ]
        } ],
        "conditions" : [ {
          "name" : "superduper-mode",
          "value" : 1,
          "type" : "variable_if"
        } ],
        "type" : "basic"
      } ]
    }
]
}
